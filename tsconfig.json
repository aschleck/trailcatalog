{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true, // recommended by esbuild
    "isolatedModules": true, // recommended by esbuild
    "jsx": "react",
    "jsxFactory": "corgi.createVirtualElement",
    "jsxFragmentFactory": "corgi.Fragment",
    "module": "commonjs", // for Jest
    "moduleResolution": "node",
    "strict": true,
    "target": "es2020",
    "paths": {
      "*": [
        "*",
        "bazel-out/x64_windows-fastbuild/bin/*",
        "bazel-out/x64_windows-dbg/bin/*",
        "bazel-out/k8-fastbuild/bin/*",
        "bazel-out/k8-dbg/bin/*",
        "bazel-out/host/bin/*",
        "bazel-out/darwin-fastbuild/bin/*",
        "bazel-out/darwin-dbg/bin/*"
      ]
    },
  },
}
